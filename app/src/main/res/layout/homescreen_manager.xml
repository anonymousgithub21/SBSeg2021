<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:background="@drawable/background_screens">




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:layout_marginTop="85dp">

        <TextView
            android:id="@+id/messageHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Bem-vindo a Área do Gestor,"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/manager_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Usuário Gestor"
            android:layout_marginTop="5dp"
            android:layout_below="@id/messageHello"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="23dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/manager_name"
            android:layout_centerHorizontal="true"
            android:text="O que você deseja hoje?"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_below="@+id/client_name"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="25dp"
            android:textSize="18dp"
            android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
            android:backgroundTint="@color/black_overlay"
            android:text="GERENCIAR USUÁRIOS"
            android:padding="35dp"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/buttonAuthentication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/ic_baseline_qr_code_scanner"
            android:layout_below="@+id/buttonManageUsers"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="35dp"
            android:textSize="18dp"
            android:backgroundTint="@color/black_overlay"
            android:text="LER CÓDIGO DE AUTENTICAÇÃO"
            android:padding="35dp"
            android:textColor="@color/white" />

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>