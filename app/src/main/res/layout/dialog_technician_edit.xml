<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/button_border"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/headerNotificationErrorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDarkBlue"
        android:gravity="center"
        android:padding="8dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_edit_white" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="18dp"
        android:textStyle="bold"
        android:text="Edite as informações do técnico."/>

    <EditText
        android:id="@+id/nameTechnician"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:padding="8dp"
        android:layout_marginLeft="7dp"
        android:drawablePadding="4dp"
        android:layout_marginRight="7dp"
        android:drawableLeft="@drawable/ic_baseline_person"
        android:background="@drawable/button_border_blue"
        />

    <EditText
        android:id="@+id/phoneTechnician"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/button_border_blue"
        android:padding="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_baseline_contact_phone"

        android:layout_marginTop="10dp">
    </EditText>

    <EditText
        android:id="@+id/certificateTechnician"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/button_border_blue"
        android:padding="8dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:drawablePadding="4dp"
        android:drawableLeft="@drawable/ic_baseline_fact_check_24"
        android:layout_marginTop="10dp">
    </EditText>

    <EditText
        android:id="@+id/urlPhotoTechnician"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:background="@drawable/button_border_blue"
        android:padding="8dp"
        android:hint="link para imagem de perfil"
        android:layout_marginLeft="7dp"
        android:drawablePadding="4dp"
        android:layout_marginRight="7dp"
        android:drawableLeft="@drawable/ic_baseline_insert_link_24"

        android:layout_marginTop="10dp">
    </EditText>


        <Button
            android:id="@+id/btnDialogOk"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/colorPrimaryBlue"
            android:enabled="true"
            android:text="Atualizar"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnDialogExit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/prata_dark"
            android:enabled="true"
            android:text="Fechar"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="visible" />



</LinearLayout>
